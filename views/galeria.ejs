    <button id="btnMusica"
        class="fixed bottom-6 right-6 w-16 h-16 rounded-full flex items-center justify-center cursor-pointer shadow-lg bg-rojo">
        <img src="/images/Vinilo.png" alt="Icono de m칰sica" class="w-10 h-10">
    </button>


    <!-- Canvas corazones flotantes -->
    <canvas id="particles" class="fixed inset-0 -z-10 pointer-events-none"></canvas>

    <!-- Scripts -->
