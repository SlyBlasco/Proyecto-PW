                    <video controls playsinline class="w-full h-full object-cover">
                        <source src="/images/galeria/video5.webm" type="video/webm" preload="none">
                    </video>
                </div>
            </div>
        </div>

        <div class="glassmorphism">
            <div class="w-full overflow-hidden rounded-lg shadow-lg bg-white/5">
                <div class="w-full aspect-[3/3] overflow-hidden">
                    <video controls playsinline class="w-full h-full object-cover">
                        <source src="/images/galeria/video6.webm" type="video/webm" preload="none">
                    </video>
                </div>
            </div>
        </div>
