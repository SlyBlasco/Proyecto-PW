<%- include('partials/header') %>

<body class="bg-black text-white font-sans">

  <%- include('partials/navbar') %>

  <!-- Sección de cassettes -->
  <section id="casetes" class="start flex items-center justify-center h-[80vh] text-center">
    <div class="glassmorphism">
      <div class="prevBtn">
        <img src="images/prevBtn.png" alt="Imagen de boton previo">
      </div>
      <div class="nextBtn">

      </div>
    </div>

  </section>


  <!-- Audio + controles -->
  <audio id="musica" preload="auto" autoplay></audio>
  <button id="btnMusica"
    class="fixed bottom-6 right-6 w-16 h-16 rounded-full flex items-center justify-center cursor-pointer shadow-lg">
    <img src="/images/Vinilo.png" alt="Icono de música" class="w-10 h-10">
  </button>


  <!-- Canvas corazones flotantes -->
  <canvas id="particles" class="fixed inset-0 -z-10 pointer-events-none"></canvas>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/tsparticles@2/tsparticles.bundle.min.js"></script>
  <script src="/js/corazones.js"></script>
  <script src="/js/musica.js"></script>
  <script src="/js/ocultarNavbar.js"></script>
  <script src="/js/animacionInicio.js"></script>

</body>

<%- include('partials/footer') %>
